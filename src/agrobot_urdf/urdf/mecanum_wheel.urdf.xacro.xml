<?xml version="1.0"?>

<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:macro name="mecanum_wheel" params="name parent *origin">

    <link name="${name}_fixed_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.6" />
        <inertia ixx="0.02" iyy="0.02" izz="0.02" ixy="0.00" ixz="0.00" iyz="0.00" />
      </inertial>
      <visual>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://agrobot_urdf/meshes/mecanum_wheel/mecanum_wheel.obj"
            scale="1 1 1" />
        </geometry>
      </visual>
      <collision>
        <origin rpy="0 0 0" xyz="0 0 0" />
        <geometry>
          <mesh filename="package://agrobot_urdf/meshes/mecanum_wheel/mecanum_wheel.obj"
            scale="1 1 1" />
        </geometry>
      </collision>
    </link>

    <joint name="${name}_fixed_rotational_joint" type="continuous">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="${name}_fixed_link" />
      <axis xyz="0 0 1" />
    </joint>

  </xacro:macro>

</robot>
